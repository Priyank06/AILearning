@inherits LayoutComponentBase

<PageTitle>AI Legacy Code Analyzer</PageTitle>

<div class="page">
    <div class="sidebar @(sidebarCollapsed ? "sidebar-collapsed" : "")">
        <NavMenu OnSidebarToggle="@HandleSidebarToggle" />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <div class="text-light small">
                <strong>AI Legacy Code Analyzer</strong>
                <span class="ms-2">Intelligent assessment for .NET legacy systems</span>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private bool sidebarCollapsed = false;

    private void HandleSidebarToggle(bool collapsed)
    {
        sidebarCollapsed = collapsed;
        StateHasChanged();
    }
}

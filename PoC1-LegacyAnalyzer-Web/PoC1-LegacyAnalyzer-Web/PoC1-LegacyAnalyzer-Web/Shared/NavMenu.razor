<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <a class="navbar-brand @(isCollapsed ? "d-none" : "")" href="">AI Code Analyzer</a>
        <button title="Toggle sidebar" class="btn btn-link text-white p-1" @onclick="ToggleSidebar">
            <i class="bi @(isCollapsed ? "bi-chevron-right" : "bi-chevron-left")"></i>
        </button>
    </div>
</div>

<div class="nav-scrollable @(isCollapsed ? "sidebar-collapsed" : "")">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" title="Single File Analysis" data-bs-toggle="@(isCollapsed ? "tooltip" : null)" data-bs-placement="right">
                <i class="bi bi-house @(isCollapsed ? "" : "me-2")" aria-hidden="true"></i>
                <span class="nav-text @(isCollapsed ? "d-none" : "")">Single File Analysis</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="multifile" title="Project Analysis" data-bs-toggle="@(isCollapsed ? "tooltip" : null)" data-bs-placement="right">
                <i class="bi bi-folder @(isCollapsed ? "" : "me-2")" aria-hidden="true"></i>
                <span class="nav-text @(isCollapsed ? "d-none" : "")">Project Analysis</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="multiagent" title="Multi-Agent Team" data-bs-toggle="@(isCollapsed ? "tooltip" : null)" data-bs-placement="right">
                <i class="bi bi-people @(isCollapsed ? "" : "me-2")" aria-hidden="true"></i>
                <span class="nav-text @(isCollapsed ? "d-none" : "")">Multi-Agent Team</span>
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool isCollapsed = false;

    private void ToggleSidebar()
    {
        isCollapsed = !isCollapsed;
        // Notify parent layout to adjust width
        OnSidebarToggle.InvokeAsync(isCollapsed);
    }

    [Parameter] public EventCallback<bool> OnSidebarToggle { get; set; }
}
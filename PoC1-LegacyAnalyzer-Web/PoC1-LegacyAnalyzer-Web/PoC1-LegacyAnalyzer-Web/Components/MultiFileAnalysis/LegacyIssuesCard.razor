@using PoC1_LegacyAnalyzer_Web.Models
@using PoC1_LegacyAnalyzer_Web.Helpers
@using PoC1_LegacyAnalyzer_Web.Components.Shared

@{
    var filesWithLegacyIssues = FileResults.Where(f =>
        f.LegacyPatternResult != null &&
        (f.LegacyPatternResult.Issues.Any() ||
         f.LegacyPatternResult.Indicators.IsVeryOldCode ||
         f.LegacyPatternResult.Indicators.IsAncientFramework ||
         f.LegacyPatternResult.Indicators.HasGlobalState)).ToList();
}

@if (filesWithLegacyIssues.Any())
{
    <div class="card shadow mt-3 section-sub">
        <CardHeader Title="Legacy Issues"
                    Icon="bi bi-exclamation-triangle"
                    Variant="warning" />
        <div class="card-body">
            @foreach (var fileResult in filesWithLegacyIssues)
            {
                var legacy = fileResult.LegacyPatternResult!;
                <div class="card mb-3 border-warning">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">
                            <i class="bi bi-file-earmark-code"></i> @fileResult.FileName
                        </h6>
                    </div>
                    <div class="card-body">
                        <!-- Legacy Indicators -->
                        @if (legacy.Indicators != null)
                        {
                            <div class="mb-3">
                                <strong>Legacy Indicators:</strong>
                                <div class="d-flex flex-wrap gap-2 mt-2">
                                    @if (legacy.Indicators.IsVeryOldCode)
                                    {
                                        <span class="badge bg-danger">
                                            ‚ö†Ô∏è Very Old Code
                                            @if (legacy.Indicators.EstimatedFileAgeYears.HasValue)
                                            {
                                                <text> (~@legacy.Indicators.EstimatedFileAgeYears years)</text>
                                            }
                                        </span>
                                    }
                                    @if (legacy.Indicators.IsAncientFramework)
                                    {
                                        <span class="badge bg-danger">
                                            üèõÔ∏è Ancient .NET Framework
                                            @if (!string.IsNullOrEmpty(legacy.Indicators.FrameworkVersion))
                                            {
                                                <text> (@legacy.Indicators.FrameworkVersion)</text>
                                            }
                                        </span>
                                    }
                                    @if (legacy.Indicators.HasGlobalState)
                                    {
                                        <span class="badge bg-warning text-dark">üåê Global State Detected</span>
                                    }
                                    @if (legacy.Indicators.HasLegacyDataAccess)
                                    {
                                        <span class="badge bg-info">üìä Legacy Data Access</span>
                                    }
                                    @if (legacy.Indicators.UsesObsoleteApis)
                                    {
                                        <span class="badge bg-danger">üî¥ Obsolete APIs</span>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Legacy Issues -->
                        @if (legacy.Issues.Any())
                        {
                            <div>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <strong>Detected Issues (@GetFilteredIssues(legacy.Issues).Count())</strong>
                                    <select class="form-select form-select-sm" style="max-width: 150px;" @bind="selectedSeverity" @bind:after="OnSeveritySelectionChanged">
                                        <option value="">All Severities</option>
                                        <option value="Critical">Critical</option>
                                        <option value="High">High</option>
                                        <option value="Medium">Medium</option>
                                        <option value="Low">Low</option>
                                    </select>
                                </div>
                                <div class="table-responsive mt-2">
                                    <table class="table table-sm table-striped table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Type</th>
                                                <th>Severity</th>
                                                <th>Location</th>
                                                <th>Description</th>
                                                <th>Recommendation</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var issue in GetFilteredIssues(legacy.Issues).OrderByDescending(i =>
                                                i.Severity == "Critical" ? 4 :
                                                i.Severity == "High" ? 3 :
                                                i.Severity == "Medium" ? 2 : 1))
                                            {
                                                <tr>
                                                    <td>
                                                        <span class="badge bg-secondary">@issue.PatternType</span>
                                                    </td>
                                                    <td>
                                                        <span class="badge @MultiFileHelpers.GetSeverityBadgeClass(issue.Severity)">@issue.Severity</span>
                                                    </td>
                                                    <td>
                                                        <small>@issue.Location</small>
                                                        @if (issue.LineNumber > 0)
                                                        {
                                                            <br>
                                                            <small class="text-muted">Line @issue.LineNumber</small>
                                                        }
                                                    </td>
                                                    <td>
                                                        <small>@issue.Description</small>
                                                    </td>
                                                    <td>
                                                        <small class="text-muted">@issue.Recommendation</small>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter, EditorRequired]
    public List<FileAnalysisResult> FileResults { get; set; } = new();

    private string selectedSeverity = string.Empty;

    private void OnSeveritySelectionChanged()
    {
        // Trigger re-render to show filtered results
    }

    private IEnumerable<LegacyIssue> GetFilteredIssues(List<LegacyIssue> issues)
    {
        if (string.IsNullOrEmpty(selectedSeverity))
        {
            return issues;
        }
        return issues.Where(i => i.Severity.Equals(selectedSeverity, StringComparison.OrdinalIgnoreCase));
    }
}

@using PoC1_LegacyAnalyzer_Web.Models
@using PoC1_LegacyAnalyzer_Web.Helpers
@using PoC1_LegacyAnalyzer_Web.Components.Shared

<div class="card shadow border-success mb-4 section-sub">
    <CardHeader Title="Strategic Business Impact"
                Subtitle="Quantified value proposition for executive review"
                Icon="bi bi-currency-dollar"
                Variant="success"
                BadgeText=@($"Net Value: {BusinessCalculations.CalculateTotalROI(Metrics).ToString("C0")}")
                BadgeVariant="light" />
    <div class="card-body p-3">
        <!-- Top Row: Primary Metrics -->
        <div class="row g-3 text-center mb-4">
            <div class="col-lg-3 col-md-6">
                <MetricCard Value="@Metrics.EstimatedDeveloperHoursSaved.ToString("F0")"
                           Label="Hours Saved"
                           SubLabel="vs Manual Analysis"
                           Icon="bi bi-clock-history"
                           Color="primary" />
            </div>
            <div class="col-lg-3 col-md-6">
                <MetricCard Value="@Metrics.ProjectCostSavings.ToString("C0")"
                           Label="Cost Avoidance"
                           SubLabel="@($"${Metrics.AverageHourlyRate}/hour rate")"
                           Icon="bi bi-currency-dollar"
                           Color="success" />
            </div>
            <div class="col-lg-3 col-md-6">
                <MetricCard Value="@Metrics.ComplianceCostAvoidance.ToString("C0")"
                           Label="Risk Mitigation"
                           SubLabel="Compliance value"
                           Icon="bi bi-shield-check"
                           Color="warning" />
            </div>
            <div class="col-lg-3 col-md-6">
                <MetricCard Value="@Metrics.MigrationTimeline"
                           Label="Timeline"
                           SubLabel="Implementation"
                           Icon="bi bi-calendar-check"
                           Color="info" />
            </div>
        </div>

        <!-- Bottom Row: Strategic Context - Compact -->
        <div class="row g-2 mt-3">
            <div class="col-md-6">
                <div class="d-flex align-items-center gap-2 p-2 bg-light rounded">
                    <i class="bi bi-building text-primary"></i>
                    <div class="flex-grow-1">
                        <small class="text-muted d-block">Project Scale</small>
                        <strong>@Metrics.ProjectSize</strong> | <small class="text-muted">@Metrics.RecommendedApproach</small>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex align-items-center gap-2 p-2 bg-light rounded">
                    <i class="bi bi-shield-check text-success"></i>
                    <div class="flex-grow-1">
                        <small class="text-muted d-block">Risk Management</small>
                        <small>@Metrics.RiskMitigation</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public BusinessMetrics Metrics { get; set; } = null!;
}

@using PoC1_LegacyAnalyzer_Web.Models
@using PoC1_LegacyAnalyzer_Web.Components.Shared

<div class="card shadow mt-3 section-sub">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-download"></i> Executive Reporting</h5>
        <button class="btn btn-light btn-sm" @onclick="OnGenerateReport" disabled="@IsGeneratingReport">
            @if (IsGeneratingReport)
            {
                <span class="spinner-border spinner-border-sm me-2"></span>
            }
            <i class="bi bi-file-earmark-pdf"></i> Generate Report
        </button>
    </div>
</div>

@code {
    [Parameter]
    public bool IsGeneratingReport { get; set; }

    [Parameter]
    public EventCallback OnGenerateReport { get; set; }
    
    [Parameter]
    public EventCallback OnExportCsv { get; set; }
}

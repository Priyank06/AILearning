@using PoC1_LegacyAnalyzer_Web.Models
@using PoC1_LegacyAnalyzer_Web.Components.Shared

<div class="card shadow mb-3 section-sub">
    <CardHeader Title="Project Summary"
                Icon="bi bi-bar-chart"
                Variant="success" />
    <div class="card-body py-2">
        <div class="row g-2">
            <div class="col-6 col-md-3">
                <div class="d-flex align-items-center gap-2 p-2 bg-primary text-white rounded">
                    <i class="bi bi-file-earmark-code fs-4"></i>
                    <div>
                        <strong class="fs-5 d-block">@Result.TotalFiles</strong>
                        <small class="opacity-75">Source Files</small>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="d-flex align-items-center gap-2 p-2 bg-info text-white rounded">
                    <i class="bi bi-box fs-4"></i>
                    <div>
                        <strong class="fs-5 d-block">@Result.TotalClasses</strong>
                        <small class="opacity-75">Classes</small>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="d-flex align-items-center gap-2 p-2 bg-warning text-dark rounded">
                    <i class="bi bi-code-square fs-4"></i>
                    <div>
                        <strong class="fs-5 d-block">@Result.TotalMethods</strong>
                        <small class="opacity-75">Methods</small>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="d-flex align-items-center gap-2 p-2 bg-secondary text-white rounded">
                    <i class="bi bi-list-ul fs-4"></i>
                    <div>
                        <strong class="fs-5 d-block">@Result.TotalProperties</strong>
                        <small class="opacity-75">Properties</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public MultiFileAnalysisResult Result { get; set; } = null!;
}

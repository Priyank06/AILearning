@using PoC1_LegacyAnalyzer_Web.Models
@using PoC1_LegacyAnalyzer_Web.Helpers
@using PoC1_LegacyAnalyzer_Web.Components.Shared

<div class="card shadow section-sub">
    <CardHeader Title="Detailed File Analysis"
                Icon="bi bi-list-ul"
                Variant="dark" />
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label small text-muted">Filter by File:</label>
            <select class="form-select form-select-sm" style="max-width: 300px;" @bind="selectedFileName" @bind:after="OnFileSelectionChanged">
                <option value="">All Files (@FileResults.Count)</option>
                @foreach (var file in FileResults.OrderBy(f => f.FileName))
                {
                    <option value="@file.FileName">@file.FileName</option>
                }
            </select>
        </div>
        <div style="max-height: 500px; overflow-y: auto;">
            @foreach (var fileResult in GetFilteredFileResults().OrderByDescending(f => f.ComplexityScore))
            {
                <div class="card mb-3 border">
                    <div class="card-header bg-light py-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0">
                                    <i class="bi bi-file-earmark-code text-primary"></i> @fileResult.FileName
                                </h6>
                            </div>
                            <span class="badge @MultiFileHelpers.GetComplexityBadgeClass(fileResult.ComplexityScore, ComplexityLowThreshold, ComplexityMediumThreshold)">
                                Complexity: @fileResult.ComplexityScore/100
                            </span>
                        </div>
                    </div>
                    <div class="card-body p-3">
                        <div class="row g-3 mb-3">
                            <div class="col-6 col-md-3">
                                <div class="text-center p-2 bg-light rounded">
                                    <strong class="d-block fs-5">@fileResult.StaticAnalysis.ClassCount</strong>
                                    <small class="text-muted">Classes</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="text-center p-2 bg-light rounded">
                                    <strong class="d-block fs-5">@fileResult.StaticAnalysis.MethodCount</strong>
                                    <small class="text-muted">Methods</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="text-center p-2 bg-light rounded">
                                    <strong class="d-block fs-5">@fileResult.StaticAnalysis.PropertyCount</strong>
                                    <small class="text-muted">Properties</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="text-center p-2 bg-light rounded">
                                    <strong class="d-block fs-5 @MultiFileHelpers.GetComplexityTextColor(fileResult.ComplexityScore, ComplexityMediumThreshold, ComplexityHighThreshold)">
                                        @fileResult.ComplexityScore
                                    </strong>
                                    <small class="text-muted">Complexity</small>
                                </div>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(fileResult.AIInsight))
                        {
                            <div class="bg-light p-3 rounded mt-2">
                                <h6 class="text-muted mb-2">
                                    <i class="bi bi-cpu"></i> Assessment Summary
                                </h6>
                                <div class="text-dark" style="line-height: 1.6;">
                                    @((MarkupString)MultiFileHelpers.FormatAIInsight(fileResult.AIInsight))
                                </div>
                            </div>
                        }

                        @* Dependency Impact Section *@
                        @if (fileResult.DependencyImpact != null)
                        {
                            <div class="bg-info bg-opacity-10 p-3 rounded mt-2 border border-info">
                                <h6 class="text-info mb-2">
                                    <i class="bi bi-diagram-3"></i> Dependency Impact
                                </h6>
                                <div class="d-flex flex-wrap gap-2 mb-2">
                                    @if (fileResult.DependencyImpact.AffectedFilesCount > 0)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-file-earmark"></i> Affects @fileResult.DependencyImpact.AffectedFilesCount file(s)
                                        </span>
                                    }
                                    @if (fileResult.DependencyImpact.AffectedClassesCount > 0)
                                    {
                                        <span class="badge bg-primary">
                                            <i class="bi bi-box"></i> @fileResult.DependencyImpact.AffectedClassesCount class(es)
                                        </span>
                                    }
                                    @if (fileResult.DependencyImpact.AffectedMethodsCount > 0)
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-code-square"></i> @fileResult.DependencyImpact.AffectedMethodsCount method(s)
                                        </span>
                                    }
                                    @if (fileResult.DependencyImpact.IsGodObject)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-exclamation-triangle-fill"></i> God Object
                                        </span>
                                    }
                                    @if (fileResult.DependencyImpact.IsInCycle)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-arrow-repeat"></i> Cyclic Dependency
                                        </span>
                                    }
                                    <span class="badge @MultiFileHelpers.GetRiskBadgeClass(fileResult.DependencyImpact.RiskLevel)">
                                        Risk: @fileResult.DependencyImpact.RiskLevel
                                    </span>
                                </div>
                                @if (fileResult.DependencyImpact.AffectedFiles.Any())
                                {
                                    <div class="mt-2">
                                        <small class="text-muted"><strong>Affected Files:</strong></small>
                                        <div class="mt-1">
                                            @foreach (var affectedFile in fileResult.DependencyImpact.AffectedFiles.Take(5))
                                            {
                                                <span class="badge bg-light text-dark me-1 mb-1">@affectedFile</span>
                                            }
                                            @if (fileResult.DependencyImpact.AffectedFiles.Count > 5)
                                            {
                                                <span class="text-muted">+@(fileResult.DependencyImpact.AffectedFiles.Count - 5) more</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }

                        @* Semantic Analysis Section *@
                        @if (fileResult.SemanticAnalysis != null)
                        {
                            <div class="mt-3 p-3 bg-light rounded border-start border-3 border-info">
                                <h6 class="text-info mb-2">
                                    <i class="bi bi-brain"></i> Semantic Analysis
                                    <span class="badge bg-info ms-2">@fileResult.StaticAnalysis.Language.ToUpper()</span>
                                </h6>

                                @* Semantic Quality Score *@
                                <div class="mb-3">
                                    <small class="text-muted">Semantic Quality Score</small>
                                    <div class="progress" style="height: 25px;">
                                        <div class="progress-bar @MultiFileHelpers.GetSemanticQualityColor(fileResult.SemanticAnalysis.SemanticQualityScore)"
                                             style="width: @fileResult.SemanticAnalysis.SemanticQualityScore%">
                                            @fileResult.SemanticAnalysis.SemanticQualityScore%
                                        </div>
                                    </div>
                                </div>

                                @* Semantic Issues *@
                                @if (fileResult.SemanticAnalysis.SemanticIssues.Any())
                                {
                                    <div class="mb-3">
                                        <h6 class="text-danger mb-2">
                                            <i class="bi bi-exclamation-triangle-fill"></i>
                                            Semantic Issues (@fileResult.SemanticAnalysis.SemanticIssues.Count)
                                        </h6>
                                        <div class="table-responsive">
                                            <table class="table table-sm table-striped table-hover">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Type</th>
                                                        <th>Category</th>
                                                        <th>Location</th>
                                                        <th>Description</th>
                                                        <th>Recommendation</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var issue in fileResult.SemanticAnalysis.SemanticIssues.OrderByDescending(i => i.Severity))
                                                    {
                                                        <tr>
                                                            <td>
                                                                <span class="badge @MultiFileHelpers.GetSemanticIssueTypeBadge(issue.IssueType)">@issue.IssueType</span>
                                                            </td>
                                                            <td>
                                                                <span class="badge @MultiFileHelpers.GetCategoryBadge(issue.Category)">@issue.Category</span>
                                                            </td>
                                                            <td>
                                                                <small>@issue.Location</small>
                                                                @if (issue.LineNumber > 0)
                                                                {
                                                                    <br>
                                                                    <small class="text-muted">Line @issue.LineNumber</small>
                                                                }
                                                            </td>
                                                            <td>
                                                                <small>@issue.Description</small>
                                                            </td>
                                                            <td>
                                                                <small class="text-muted">@issue.Recommendation</small>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                }

                                @* Language-Specific Patterns *@
                                @if (fileResult.SemanticAnalysis.DetectedPatterns.Any())
                                {
                                    <div>
                                        <h6 class="text-warning mb-2">
                                            <i class="bi bi-code-slash"></i>
                                            Language-Specific Patterns (@fileResult.SemanticAnalysis.DetectedPatterns.Count)
                                        </h6>
                                        <div class="d-flex flex-wrap gap-2 mb-2">
                                            @foreach (var pattern in fileResult.SemanticAnalysis.DetectedPatterns)
                                            {
                                                <div class="card border-warning" style="min-width: 200px;">
                                                    <div class="card-body p-2">
                                                        <div class="d-flex align-items-center gap-2 mb-1">
                                                            <span class="badge @(pattern.IsDeprecated ? "bg-danger" : "bg-warning text-dark")">
                                                                @pattern.PatternType
                                                            </span>
                                                            @if (pattern.IsDeprecated)
                                                            {
                                                                <span class="badge bg-danger">Deprecated</span>
                                                            }
                                                        </div>
                                                        <small class="d-block mb-1"><strong>@pattern.Description</strong></small>
                                                        @if (!string.IsNullOrEmpty(pattern.ModernAlternative))
                                                        {
                                                            <small class="text-success d-block mb-1">
                                                                <i class="bi bi-arrow-right"></i> @pattern.ModernAlternative
                                                            </small>
                                                        }
                                                        @if (!string.IsNullOrEmpty(pattern.MigrationGuidance))
                                                        {
                                                            <small class="text-muted d-block">@pattern.MigrationGuidance</small>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                    <div class="ms-3">
                        <span class="badge @MultiFileHelpers.GetComplexityBadgeClass(fileResult.ComplexityScore, ComplexityLowThreshold, ComplexityMediumThreshold)">
                            @MultiFileHelpers.GetComplexityLabel(fileResult.ComplexityScore, ComplexityLowThreshold, ComplexityMediumThreshold)
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public List<FileAnalysisResult> FileResults { get; set; } = new();

    [Parameter]
    public int ComplexityLowThreshold { get; set; } = 30;

    [Parameter]
    public int ComplexityMediumThreshold { get; set; } = 50;

    [Parameter]
    public int ComplexityHighThreshold { get; set; } = 70;

    private string selectedFileName = string.Empty;

    private void OnFileSelectionChanged()
    {
        // Trigger re-render to show filtered results
    }

    private IEnumerable<FileAnalysisResult> GetFilteredFileResults()
    {
        if (string.IsNullOrEmpty(selectedFileName))
        {
            return FileResults;
        }
        return FileResults.Where(f => f.FileName == selectedFileName);
    }
}

@using PoC1_LegacyAnalyzer_Web.Models.AgentCommunication
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime

@* Right sidebar with quick navigation, key metrics, and actions *@
<div class="quick-nav-sidebar">
    <div class="quick-nav-inner">
        <!-- Quick Navigation -->
        <div class="card mb-3 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0"><i class="bi bi-list-ul card-icon"></i> Quick Navigation</h6>
            </div>
            <div class="card-body p-2">
                <nav class="nav flex-column">
                    <a class="nav-link quick-nav-link @(activeSection == "business-context" ? "active" : "")"
                       href="#section-business-context" @onclick:preventDefault="true" @onclick="@(() => ScrollToElement("section-business-context"))">
                        <i class="bi bi-info-circle inline-icon"></i> Business Context
                    </a>
                    <a class="nav-link quick-nav-link @(activeSection == "metrics" ? "active" : "")"
                       href="#section-metrics" @onclick:preventDefault="true" @onclick="@(() => ScrollToElement("section-metrics"))">
                        <i class="bi bi-speedometer2 inline-icon"></i> Metrics
                    </a>
                    <a class="nav-link quick-nav-link @(activeSection == "executive-summary" ? "active" : "")"
                       href="#section-executive-summary" @onclick:preventDefault="true" @onclick="@(() => ScrollToElement("section-executive-summary"))">
                        <i class="bi bi-file-text inline-icon"></i> Executive Summary
                    </a>
                    @if (TeamResult?.IndividualAnalyses?.Any() == true)
                    {
                        <a class="nav-link quick-nav-link @(activeSection == "agent-analysis" ? "active" : "")"
                           href="#section-agent-analysis" @onclick:preventDefault="true" @onclick="@(() => ScrollToElement("section-agent-analysis"))">
                            <i class="bi bi-person-badge inline-icon"></i> Agent Analysis
                        </a>
                    }
                    @if (TeamResult?.FinalRecommendations != null)
                    {
                        <a class="nav-link quick-nav-link @(activeSection == "recommendations" ? "active" : "")"
                           href="#section-recommendations" @onclick:preventDefault="true" @onclick="@(() => ScrollToElement("section-recommendations"))">
                            <i class="bi bi-list-check inline-icon"></i> Recommendations
                        </a>
                    }
                </nav>
            </div>
        </div>

        <!-- Key Metrics Summary -->
        @if (TeamResult != null)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0"><i class="bi bi-graph-up card-icon"></i> Key Metrics</h6>
                </div>
                <div class="card-body p-3">
                    <div class="mb-2">
                        <small class="text-muted d-block">Overall Confidence</small>
                        <strong class="text-success">@(TeamResult.OverallConfidenceScore)%</strong>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted d-block">Team Consensus</small>
                        <strong>@(TeamResult.Consensus?.AgreementPercentage ?? 0)%</strong>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted d-block">Specialist Agents</small>
                        <strong>@(TeamResult.IndividualAnalyses?.Count ?? 0)</strong>
                    </div>
                    @if (TeamResult.FinalRecommendations != null)
                    {
                        <div class="mb-2">
                            <small class="text-muted d-block">High Priority Actions</small>
                            <strong class="text-danger">@(TeamResult.FinalRecommendations.HighPriorityActions?.Count ?? 0)</strong>
                        </div>
                        <div class="mb-2">
                            <small class="text-muted d-block">Total Effort</small>
                            <strong>@(TeamResult.FinalRecommendations.TotalEstimatedEffort)h</strong>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Quick Actions -->
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h6 class="mb-0"><i class="bi bi-lightning card-icon"></i> Quick Actions</h6>
            </div>
            <div class="card-body p-2">
                <button class="btn btn-primary btn-sm w-100 mb-2" @onclick="OnDownloadReport">
                    <i class="bi bi-download"></i> Download Report
                </button>
                <button class="btn btn-outline-secondary btn-sm w-100 mb-2" @onclick="ScrollToTop">
                    <i class="bi bi-arrow-up"></i> Back to Top
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public TeamAnalysisResult? TeamResult { get; set; }
    [Parameter] public EventCallback OnDownloadReport { get; set; }
    [Parameter] public EventCallback OnNavigate { get; set; }

    private string activeSection = "business-context";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var dotNetRef = DotNetObjectReference.Create(this);
            await JSRuntime.InvokeVoidAsync("initScrollSpy", dotNetRef);
        }
    }

    [JSInvokable]
    public void UpdateActiveSection(string sectionId)
    {
        activeSection = sectionId;
        StateHasChanged();
    }

    private async Task ScrollToElement(string elementId)
    {
        await JSRuntime.InvokeVoidAsync("scrollToElement", elementId);

        if (OnNavigate.HasDelegate)
        {
            await OnNavigate.InvokeAsync(null);
        }
    }

    private async Task ScrollToTop()
    {
        await JSRuntime.InvokeVoidAsync("scrollToTop");

        if (OnNavigate.HasDelegate)
        {
            await OnNavigate.InvokeAsync(null);
        }
    }
}

<style>
    .quick-nav-sidebar {
        width: 280px;
        padding: 0 1rem 0 0.5rem;
        position: sticky;
        top: 2rem;
        max-height: calc(100vh - 4rem);
        overflow-y: auto;
    }

    .quick-nav-link {
        padding: 0.5rem 0.75rem !important;
        color: #495057;
        border-radius: 4px;
        margin-bottom: 0.25rem;
        transition: all 0.2s ease;
        text-decoration: none;
    }

    .quick-nav-link:hover {
        background-color: #f8f9fa;
        color: #007bff;
        transform: translateX(4px);
    }

    .quick-nav-link i {
        margin-right: 0.5rem;
        width: 1.2rem;
    }

    .card {
        border: none;
        border-radius: 8px;
    }

    .card-header {
        border-radius: 8px 8px 0 0;
        font-size: 0.85rem;
        padding: 0.5rem 0.75rem;
    }

    .card-body {
        font-size: 0.9rem;
    }

    /* Custom scrollbar styling */
    .quick-nav-sidebar::-webkit-scrollbar {
        width: 6px;
    }

    .quick-nav-sidebar::-webkit-scrollbar-thumb {
        background-color: #dee2e6;
        border-radius: 3px;
    }

    @@media (max-width: 1200px) {
        .quick-nav-sidebar {
            display: none;
        }
    }
</style>


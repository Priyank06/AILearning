@using PoC1_LegacyAnalyzer_Web.Components.Analysis
@using PoC1_LegacyAnalyzer_Web.Models.AgentCommunication
@using PoC1_LegacyAnalyzer_Web.Models
@using PoC1_LegacyAnalyzer_Web.Services

@* Analysis results container - master composite component *@
<div>
    <div id="section-business-context" class="scroll-section">
        <BusinessContextCard 
            BusinessObjective="@BusinessObjective"
            CustomObjective="@CustomObjective"
            SelectedAgents="@SelectedAgents"
            ProjectSummary="@ProjectSummary"
            CodeInputLength="@EstimatedInputTokens" />
    </div>
        
    @if (ProjectSummary != null)
    {
        <div id="section-project-overview" class="scroll-section">
            <ProjectOverviewCard ProjectSummary="@ProjectSummary" />
        </div>
    }
    
    <div id="section-token-usage" class="scroll-section">
        <TokenUsageCard 
            TokenUsage="@TeamResult?.TokenUsage"
            EstimatedInputTokens="@EstimatedInputTokens"
            EstimatedCompletionTokens="@(TeamResult?.ExecutiveSummary?.Length / 4 ?? 1000)" />
    </div>
    
    <div id="section-executive-summary" class="scroll-section">
        <ExecutiveSummaryCard 
            ExecutiveSummary="@TeamResult?.ExecutiveSummary"
            IsAnalyzing="@IsAnalyzing" />
    </div>
        
    @if (TeamResult?.IndividualAnalyses?.Any() == true)
    {
        <div id="section-agent-analysis" class="scroll-section">
            <div class="card shadow mb-3">
                <div class="card-header border-bottom border-2 bg-transparent">
                    <h6 class="text-secondary mb-0"><i class="bi bi-person-badge"></i> Individual Agent Analysis</h6>
                </div>
                <div class="card-body">
                    @foreach (var analysis in TeamResult.IndividualAnalyses.OrderByDescending(a => a.ConfidenceScore))
                    {
                        <AgentAnalysisCard Analysis="@analysis" />
                    }
                </div>
            </div>
        </div>
    }
    
    @if (TeamResult?.FinalRecommendations != null)
    {
        <div id="section-recommendations" class="scroll-section">
            <ConsolidatedRecommendationsCard 
                Recommendations="@TeamResult.FinalRecommendations"
                ActiveTab="@activeTab"
                ExpandedStates="@expandedRecommendations"
                IsStrategyExpanded="@isStrategyExpanded"
                OnTabChange="@OnTabChanged"
                OnToggleRecommendation="@ToggleRecommendation"
                OnToggleStrategy="@ToggleStrategy"
                OnDownloadReport="@OnDownloadReport" />
        </div>
    }
    
    @* Semantic Analysis Section *@
    @if (TeamResult?.FileSemanticAnalysis != null && TeamResult.FileSemanticAnalysis.Any())
    {
        <div id="section-semantic-analysis" class="scroll-section">
            <div class="card shadow mb-3">
                <div class="card-header border-bottom border-2 bg-info text-white">
                    <h6 class="mb-0"><i class="bi bi-brain"></i> Semantic Analysis Results</h6>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">
                        <small>Language-specific semantic issues detected using hybrid analysis (Tree-sitter syntax + AI semantic analysis)</small>
                    </p>
                    @foreach (var semanticResult in TeamResult.FileSemanticAnalysis)
                    {
                        <div class="card mb-3 border-start border-3 border-info">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="bi bi-file-earmark-code"></i> @semanticResult.Key
                                    @if (semanticResult.Value.SyntaxAnalysis != null && !string.IsNullOrEmpty(semanticResult.Value.SyntaxAnalysis.Language))
                                    {
                                        <span class="badge bg-info ms-2">@semanticResult.Value.SyntaxAnalysis.Language.ToUpper()</span>
                                    }
                                </h6>
                                
                                @* Semantic Quality Score *@
                                <div class="mb-3">
                                    <small class="text-muted">Semantic Quality Score</small>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar @GetSemanticQualityColor(semanticResult.Value.SemanticQualityScore)" 
                                             style="width: @semanticResult.Value.SemanticQualityScore%">
                                            @semanticResult.Value.SemanticQualityScore%
                                        </div>
                                    </div>
                                </div>
                                
                                @* Semantic Issues *@
                                @if (semanticResult.Value.SemanticIssues.Any())
                                {
                                    <div class="mb-3">
                                        <h6 class="text-danger">
                                            <i class="bi bi-exclamation-triangle-fill"></i> 
                                            Semantic Issues (@semanticResult.Value.SemanticIssues.Count)
                                        </h6>
                                        <div class="table-responsive">
                                            <table class="table table-sm table-hover">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Type</th>
                                                        <th>Category</th>
                                                        <th>Location</th>
                                                        <th>Description</th>
                                                        <th>Recommendation</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var issue in semanticResult.Value.SemanticIssues.OrderByDescending(i => i.Severity))
                                                    {
                                                        <tr>
                                                            <td>
                                                                <span class="badge @GetSemanticIssueTypeBadge(issue.IssueType)">@issue.IssueType</span>
                                                            </td>
                                                            <td>
                                                                <span class="badge @GetCategoryBadge(issue.Category)">@issue.Category</span>
                                                            </td>
                                                            <td>
                                                                <small>@issue.Location</small>
                                                                @if (issue.LineNumber > 0)
                                                                {
                                                                    <br><small class="text-muted">Line @issue.LineNumber</small>
                                                                }
                                                            </td>
                                                            <td>
                                                                <small>@issue.Description</small>
                                                            </td>
                                                            <td>
                                                                <small class="text-muted">@issue.Recommendation</small>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                }
                                
                                @* Language-Specific Patterns *@
                                @if (semanticResult.Value.DetectedPatterns.Any())
                                {
                                    <div>
                                        <h6 class="text-warning">
                                            <i class="bi bi-code-slash"></i> 
                                            Language-Specific Patterns (@semanticResult.Value.DetectedPatterns.Count)
                                        </h6>
                                        <div class="d-flex flex-wrap gap-2">
                                            @foreach (var pattern in semanticResult.Value.DetectedPatterns)
                                            {
                                                <div class="card border-warning" style="min-width: 200px;">
                                                    <div class="card-body p-2">
                                                        <div class="d-flex align-items-center gap-2 mb-1">
                                                            <span class="badge @(pattern.IsDeprecated ? "bg-danger" : "bg-warning text-dark")">
                                                                @pattern.PatternType
                                                            </span>
                                                            @if (pattern.IsDeprecated)
                                                            {
                                                                <span class="badge bg-danger">Deprecated</span>
                                                            }
                                                        </div>
                                                        <small class="d-block mb-1"><strong>@pattern.Description</strong></small>
                                                        @if (!string.IsNullOrEmpty(pattern.ModernAlternative))
                                                        {
                                                            <small class="text-success d-block mb-1">
                                                                <i class="bi bi-arrow-right"></i> @pattern.ModernAlternative
                                                            </small>
                                                        }
                                                        @if (!string.IsNullOrEmpty(pattern.MigrationGuidance))
                                                        {
                                                            <small class="text-muted d-block">@pattern.MigrationGuidance</small>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<style>
    .scroll-section {
        scroll-margin-top: 4rem;
    }
</style>

@code {
    private string activeTab = "high";
    private Dictionary<string, bool> expandedRecommendations = new();
    private bool isStrategyExpanded = false;

    [Parameter] public TeamAnalysisResult? TeamResult { get; set; }
    [Parameter] public string BusinessObjective { get; set; } = string.Empty;
    [Parameter] public string? CustomObjective { get; set; }
    [Parameter] public List<string> SelectedAgents { get; set; } = new();
    [Parameter] public PoC1_LegacyAnalyzer_Web.Services.ProjectSummary? ProjectSummary { get; set; }
    [Parameter] public int EstimatedInputTokens { get; set; }
    [Parameter] public bool IsAnalyzing { get; set; }
    [Parameter] public EventCallback OnDownloadReport { get; set; }

    private async Task OnTabChanged(string tab)
    {
        activeTab = tab;
        StateHasChanged();
    }

    private async Task ToggleRecommendation(string recId)
    {
        if (expandedRecommendations.ContainsKey(recId))
        {
            expandedRecommendations[recId] = !expandedRecommendations[recId];
        }
        else
        {
            expandedRecommendations[recId] = true;
        }
        StateHasChanged();
    }

    private async Task ToggleStrategy()
    {
        isStrategyExpanded = !isStrategyExpanded;
        StateHasChanged();
    }

    private string GetSemanticQualityColor(int score)
    {
        return score >= 80 ? "bg-success" :
               score >= 60 ? "bg-warning" :
               score >= 40 ? "bg-info" :
               "bg-danger";
    }

    private string GetSemanticIssueTypeBadge(string issueType)
    {
        return issueType.ToUpper() switch
        {
            var t when t.Contains("TYPE") => "bg-danger",
            var t when t.Contains("UNINITIALIZED") => "bg-warning text-dark",
            var t when t.Contains("CONTROL") => "bg-info",
            var t when t.Contains("DEPRECATED") => "bg-danger",
            var t when t.Contains("RUNTIME") => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetCategoryBadge(string category)
    {
        return category?.ToUpper() switch
        {
            "ERROR" => "bg-danger",
            "WARNING" => "bg-warning text-dark",
            "INFO" => "bg-info",
            _ => "bg-secondary"
        };
    }
}